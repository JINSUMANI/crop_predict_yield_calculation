<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/signature_green_top_bar">
    </ImageView>

    <TextView
        android:textSize="18sp"
        android:textColor="@color/black"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginTop="-200dp"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:id="@+id/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="22/01/2021">
    </TextView>

    <TextView
        android:layout_marginTop="80dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/cropName"
        android:textSize="30sp"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/black"

        android:layout_height="wrap_content"
        android:text="Rice">
    </TextView>

    <TextView
        android:drawableLeft="@drawable/ic_baseline_local_florist_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:id="@+id/yieldEstimated"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:layout_height="wrap_content"
        android:text="Estiamated Yield : 3.1432">
    </TextView>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/expected"
        android:textSize="20sp"
        android:drawableLeft="@drawable/ic_baseline_timer_24"
        android:drawablePadding="10dp"
        android:textColorLink="#ff0000"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Yield at: 22/06/2021">
    </TextView>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:id="@+id/soilType"
        android:drawableLeft="@drawable/ic_baseline_nature_24"
        android:drawablePadding="10dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Soil Type">
    </TextView>

    <TextView
        android:drawableLeft="@drawable/ic_baseline_location_city_24"
        android:drawablePadding="10dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginRight="20dp"
        android:id="@+id/district"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Best produced at">
    </TextView>

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/raleway_medium"
        android:layout_marginRight="20dp"
        android:id="@+id/suggestedCrops"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Other suggestions">
    </TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/suggestedCropslist">
    </androidx.recyclerview.widget.RecyclerView>


</LinearLayout>
</ScrollView>